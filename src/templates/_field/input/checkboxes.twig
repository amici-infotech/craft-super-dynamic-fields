{% import '_includes/forms' as forms %}

<input type="hidden" name="{{ name }}" value="--">
<div class="checkbox-group">
	{% for option in options %}
		{{ forms.checkboxField({
            label: option.label,
            name: name ~ '[]',
            value: option.value,
            checked: (option.value in value)
        }) }}
	{% endfor %}
	{# {{ forms.errorList(field.getErrors(name)) }} #}
</div>

{% if genError|length %}
	<div class="sdf-al-box border-box error matrixconfigitem text">
		<div class="sdf-error-message">
			<em class="alert icon">{{ genError }}</em>
			{% if template|length %}
			<a href="javascript:;" class="icon add error expand-code"></a>
			{% endif %}
		</div>

		{% if template|length %}
		<div class="code" style="display: none;">
			<pre>{{ template }}</pre>
		</div>
		{% endif %}
	</div>
{% endif %}
